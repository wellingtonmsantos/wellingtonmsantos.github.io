---
layout: layouts/base.njk
---

<section class="section">
  <div
    class="container">
    {# Botão voltar #}
    <a href="/#projetos" class="back-button">
      <svg
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Voltar para Projetos
    </a>
    {# Cabeçalho do projeto #}
    <header class="section__header">
      <h1>{{ title }}</h1>
      <p>{{ resumo }}</p>
    </header>
    {# Conteúdo do projeto #}
    {{ content | safe }}
    {# Navegação #}
    <div class="card fade-in" style="margin-top: 3rem;">
      <p style="text-align: center;">
        <a class="button button--primary" href="/#contato">Quer um projeto assim?</a>
      </p>
    </div>
  </div>
</section>